<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //第一排
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF4081"
        android:layout_weight="1">
       <RelativeLayout
           android:id="@+id/rl_air_condition"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#4d4b4b"/>
           <ImageView
               android:id="@+id/iv_air_condition"
               android:layout_centerInParent="true"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:src="@drawable/air_conditioning_off"/>
       </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:id="@+id/rl_curtain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>
            <ImageView
                android:id="@+id/iv_curtain"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/curtain_off"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:id="@+id/rl_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4d4b4b"/>
            <ImageView
                android:id="@+id/iv_light"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/lights_off"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7f7f7f"/>
    //第二排
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3F51B5">
        <RelativeLayout
            android:id="@+id/rl_monitor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>
            <ImageView
                android:id="@+id/iv_monitor"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/monitor"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:id="@+id/rl_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4d4b4b"/>
            <ImageView
                android:id="@+id/iv_music"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/music_off"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:id="@+id/rl_security"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>
            <ImageView
                android:id="@+id/iv_security"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/security_off"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7f7f7f"/>
    //第三排
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff4081">
        <RelativeLayout
            android:id="@+id/rl_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4d4b4b"/>
            <ImageView
                android:id="@+id/iv_lock"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/door_lock_off"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:id="@+id/rl_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>
            <ImageView
                android:id="@+id/iv_panel"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/panel"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4d4b4b"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7f7f7f"/>
    //第四排
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3F51B5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>

        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4d4b4b"/>

        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7f7f7f"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4f4e4e"/>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#0000">
       <TextView
           android:id="@+id/tv_rooms"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/switch_rooms"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:paddingTop="25dp"
           android:gravity="center_horizontal"
           android:textSize="25dp"
           android:text="客厅" />
   </RelativeLayout>
</RelativeLayout>
